{
	"$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.34/schema.json",
	"app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
	"window_hiding_behaviour": "Cloak",
	"cross_monitor_move_behaviour": "Insert",
	"cross_boundary_behaviour": "Monitor",
	"mouse_follows_focus": false,
	"floating_window_aspect_ratio": "Widescreen",
	"default_workspace_padding": 7,
	"default_container_padding": 15,
	"resize_delta": 200,
	"stackbar": {
		"height": 35,
		"mode": "OnStack",
		"tabs": { "width": 300, "font_family": "JetBrainsMono NFP", "font_size": 30 }
	},
	"animation": { "enabled": true, "fps": 120, "style": { "movement": "EaseOutBack", "transparency": "Linear" } },
	"border": true,
	"border_implementation": "Komorebi",
	"border_width": 5,
	"border_offset": -1,
	"border_style": "System",
	"theme": {
		"palette": "Catppuccin",
		"name": "Mocha",
		"unfocused_border": "Surface0",
		"single_border": "Sky",
		"monocle_border": "Green",
		"floating_border": "Sapphire",
		"stack_border": "Peach",
		"stackbar_background": "Base",
		"stackbar_unfocused_text": "Overlay0",
		"stackbar_focused_text": "Peach"
	},
	"transparency": false,
	"transparency_alpha": 240,
	"transparency_ignore_rules": [{ "kind": "Title", "id": "Youtube", "matching_strategy": "Contains" }],
	"ignore_rules": [
		{ "kind": "Exe", "id": "ShareX", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "uninstall.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "Toolbox.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "YoloMouse.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "SnippingTool.exe", "matching_strategy": "Equals" },
		{ "kind": "Title", "id": "Settings", "matching_strategy": "Equals" },
		{ "kind": "Title", "id": "Microsoft Store", "matching_strategy": "Equals" },
		{ "kind": "Title", "id": "Media Player", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "vmware.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "yasb.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "kleopatra.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "OpenRGB.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "PowerToys.FileLocksmithUI.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "matching_strategy": "Equals", "id": "SymlinkCreator.exe" }
	],
	"floating_applications": [
		{ "kind": "Exe", "id": "explorer.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "foobar2000.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "VirtualBox.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "ShareX.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "Notepad.exe", "matching_strategy": "Equals" },
		{ "kind": "Class", "id": "VbaWindow", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "bluebubbles_app.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "ApplicationFrameHost.exe", "matching_strategy": "Equals" },
		{ "kind": "Exe", "id": "qbittorrent.exe", "matching_strategy": "Equals" }
	],
	"monitors": [
		{
			"window_based_work_area_offset_limit": 2,
			"window_based_work_area_offset": { "left": 1000, "top": 0, "right": 2000, "bottom": 0 },
			"workspaces": [
				{
					"name": "1",
					"layout": "UltrawideVerticalStack",
					"window_container_behaviour_rules": { "0": "Create", "4": "Append" }
				},
				{
					"name": "2",
					"layout": "UltrawideVerticalStack",
					"window_container_behaviour_rules": { "0": "Create", "4": "Append" }
				},
				{
					"name": "3",
					"layout": "UltrawideVerticalStack",
					"window_container_behaviour_rules": { "0": "Create", "4": "Append" }
				}
			]
		}
	],
	"manage_rules": []
}
